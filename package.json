{
  "bin": {
    "velocious": "build/bin/velocious.js"
  },
  "name": "velocious",
  "version": "1.0.199",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**"
  ],
  "scripts": {
    "all-checks": "npm run typecheck && npm run lint && npm run test",
    "build": "rm -rf build && npm run compile",
    "compile": "tsc -b && npm run copy:ejs && npm run copy:templates && chmod +x build/bin/velocious.js",
    "copy:ejs": "cpy \"src/routes/**/*.ejs\" build/src/routes",
    "copy:templates": "cpy \"src/templates/**/*.js\" build/src/templates",
    "lint": "eslint",
    "release:patch": "node scripts/release-patch.js",
    "test": "cd spec/dummy && VELOCIOUS_TEST_DIR=$(pwd)/.. node ../../bin/velocious.js test",
    "test:browser": "node scripts/test-browser.js",
    "prepublishOnly": "npm run build && chmod +x build/bin/velocious.js",
    "typecheck": "tsc --noEmit",
    "velocious": "asd",
    "watch": "tsc -w",
    "watch:ejs": "chokidar \"src/**/*.ejs\" -c \"npm run copy:ejs\""
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaspernj/velocious.git"
  },
  "author": "kasper@diestoeckels.de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kaspernj/velocious/issues"
  },
  "homepage": "https://github.com/kaspernj/velocious#readme",
  "description": "",
  "dependencies": {
    "awaitery": "^1.0.6",
    "bcryptjs": "^3.0.2",
    "better-localstorage": "^1.0.7",
    "debounce": "^3.0.0",
    "diggerize": "^1.0.5",
    "ejs": "^4.0.1",
    "env-sense": "^1.0.2",
    "epic-locks": "^1.0.7",
    "escape-string-regexp": "^1.0.5",
    "eventemitter3": "^5.0.1",
    "gettext-universal": "^1.0.21",
    "incorporator": "^1.0.2",
    "inflection": "^3.0.0",
    "is-plain-object": "^5.0.0",
    "picocolors": "^1.1.1",
    "pure-uuid": "^2.0.0",
    "set-state-compare": "^1.0.61",
    "sql-escape-string": "^1.1.0",
    "sql.js": "^1.12.0",
    "strftime": "^0.10.2"
  },
  "peerDependencies": {
    "smtp-connection": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^6.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "eslint-plugin-jsdoc": "^62.0.0",
    "globals": "^17.0.0",
    "mssql": "^12.0.0",
    "mysql": "^2.18.1",
    "node-fetch": "^3.3.1",
    "pg": "^8.16.3",
    "require-context": "^1.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "system-testing": "^1.0.60",
    "tedious": "^19.1.3",
    "typescript": "^5.9.3",
    "uniqunize": "^1.0.3"
  }
}
